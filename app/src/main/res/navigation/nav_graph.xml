<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/RunFragment">

    <fragment
        android:id="@+id/RunFragment"
        android:name="com.example.beraniberlari.ui.view.RunFragment"
        android:label="Run"
        tools:layout="@layout/run_fragment">
        <action
            android:id="@+id/goToTracking"
            app:destination="@id/TrackingFragment"
            app:launchSingleTop="true"/>

    </fragment>
    <fragment
        android:id="@+id/DashboardFragment"
        android:name="com.example.beraniberlari.ui.view.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/dashboard_fragment">

    </fragment>

    <fragment
        android:id="@+id/SettingFragment"
        android:name="com.example.beraniberlari.ui.view.SettingFragment"
        android:label="Setting"
        tools:layout="@layout/setting_fragment">

    </fragment>

    <fragment
        android:id="@+id/SetupFragment"
        android:name="com.example.beraniberlari.ui.view.SetupFragment"
        android:label="Setup"
        tools:layout="@layout/setup_fragment">
        <action
            android:id="@+id/goToRun"
            app:destination="@id/RunFragment"
            app:launchSingleTop="true"/>

    </fragment>

    <fragment
        android:id="@+id/TrackingFragment"
        android:name="com.example.beraniberlari.ui.view.TrackingFragment"
        android:label="Tracking"
        tools:layout="@layout/tracking_fragment">
        <action
            android:id="@+id/goToRun"
            app:destination="@id/RunFragment"
            app:launchSingleTop="true"/>
        
    </fragment>
</navigation>